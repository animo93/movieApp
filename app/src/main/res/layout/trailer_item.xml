<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/trailers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_play_128"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/trailers"
        android:layout_toRightOf="@+id/trailers"
        android:layout_toEndOf="@+id/trailers"
        android:layout_marginLeft="109dp"
        android:layout_marginStart="109dp"
        android:layout_marginBottom="32dp"
        android:id="@+id/trailer_title"
        android:textAppearance="@style/TextAppearance.Movies.Title.Expanded" />


</RelativeLayout>